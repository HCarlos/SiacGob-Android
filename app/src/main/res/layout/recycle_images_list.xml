<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_menu_hijos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/em8"
    android:layout_marginLeft="@dimen/em8"
    card_view:cardCornerRadius="@dimen/cvRadioCornerHijos"
    android:layout_marginBottom="@dimen/cvBottomMarginHijos"
    >

    <LinearLayout
        android:id="@+id/lyHijos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_imagen"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_weight="@string/cvImgLeftHijos"
            android:paddingTop="@dimen/em8"/>


    </LinearLayout>

</android.support.v7.widget.CardView>